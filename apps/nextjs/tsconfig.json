{
  "extends": "@skylar/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@skylar/auth": ["../../packages/auth/index.ts"],
      "@skylar/auth/*": ["../../packages/auth/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "references": [
    {
      "path": "../../packages/auth"
    }
  ],
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", ".turbo"]
}
